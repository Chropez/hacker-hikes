{{#site-container}}
  {{#hh-toolbar}}
    {{#if media.isMobile}}

      <div class="layout-row">
        {{#link-to "index" classNames='flex layout-row layout-align-start-center'}}
          {{#paper-button iconButton=true}}
            {{paper-icon "keyboard backspace" }}
          {{/paper-button}}
        {{/link-to}}
        <h2 class="path-sub-toolbar__title">{{model.name}}</h2>
        <span class="flex"></span>
      </div>

    {{else}}

      <div class="layout-row layout-align-center-center flex">
        <img data-toolbar-logo="image" class="animated-content" src="/images/icons/android-chrome-192x192.png" alt="">
        <h2 class="logo">hacker-hikes</h2>
      </div>

    {{/if}}

  {{/hh-toolbar}}

  {{#hh-content}}
    {{#paper-card class="path-sub-toolbar layout-row layout-align-space-between-center hide-xs" as |card|}}
      {{#link-to "index" classNames='flex'}}
        {{#paper-button iconButton=true}}
          {{paper-icon "keyboard backspace" size=30}}
        {{/paper-button}}
      {{/link-to}}

      <div class="path-sub-toolbar__title primary-color flex-70">{{model.name}}</div>
      <div class="flex"></div>
    {{/paper-card}}


    <div class="layout-xs-column layout-row">
      {{#paper-card class="card-map__card flex-gt-xs-66 flex-xs-100 md-whiteframe-2dp" as |card|}}
        {{#card.content class="height-100"}}
          {{hh-path-map path=model}}
        {{/card.content}}
      {{/paper-card}}

      <div class="flex-gt-xs-33 flex-xs-100">
        {{liquid-outlet}}
      </div>
    </div>

  {{/hh-content}}
{{/site-container}}